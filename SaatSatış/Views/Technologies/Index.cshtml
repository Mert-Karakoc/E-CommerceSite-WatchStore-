@model IEnumerable<Models.Technology>

@{
    ViewBag.Title = "Teknolojiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teknolojiler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TechnologyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TechnologyName)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.TechnologyID }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.TechnologyID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.TechnologyID })
        </td>
    </tr>
}

</table>
