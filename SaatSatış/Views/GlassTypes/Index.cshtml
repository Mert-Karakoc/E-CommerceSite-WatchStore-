@model IEnumerable<Models.GlassType>

@{
    ViewBag.Title = "Cam Tipleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cam Tipleri</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GlassTypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GlassTypeName)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.GlassTypeID }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.GlassTypeID }) |
